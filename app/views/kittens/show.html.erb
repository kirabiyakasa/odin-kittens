<section id='sub-container'>
  Name: <%= @kitten.name %><br>
  Age: <%= @kitten.age %><br>
  Cuteness: <%= @kitten.cuteness %><br>
  softness: <%= @kitten.softness %><br>

  <b>
    <%= link_to 'Edit', edit_kitten_path(@kitten) %>
  </b>

  <b>
    <%= link_to 'Delete', kitten_path(@kitten), method: 'delete',
    class: "delete-button",
    data: { confirm: "Are you sure you want to delete this post?" } %>
  </b>

  <div class="back-button">
    <%= link_to '<<< Go Back', kittens_path %>
  </div>
</section>
